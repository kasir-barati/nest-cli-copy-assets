{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ],
    "assets": [
      { "include": "**/*.hbs", "outDir": "dist/src" },
      { "include": "**/*.xml", "outDir": "dist/src" },
      { "include": "**/*.png", "outDir": "dist/src" },
      { "include": "**/*.ttf", "outDir": "dist/src" }
    ],
    "watchAssets": true
  }
}
